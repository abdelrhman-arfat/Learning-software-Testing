{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    "allowJs": true,
    "noEmit": true,
    "types": ["jest"]
  },
  "include": ["src", "jest.config.ts"],
  "exclude": ["node_modules"]
}
